<html>
<head>
  <style>
      h1{
      margin-top:50px;
    }
    body {
            height: 100vh;
            display: flex;
            align-items: center;
             background: linear-gradient(#141e30, #243b55);
            overflow:hidden;
        }
       
        .container{
          width:500px;
          box-shadow: 10px 10px 5px lightblue;
          border-radius: 10px;
            background: white;
            padding: 5px 10px;
        }      
  </style>
  </head>
      <body>
          <div class="container">
            <div class="row justify-content-md-center"> 
           
                <div class="projects">

                <% if @patch.pat.attached? %>
                   <% if  @patch.pat.image?%>
<%= link_to image_tag(@patch.pat, class: "img"),  rails_blob_path(@patch.pat, disposition: "attachment") %>
                   
                   <% else %>
                   <%= link_to @patch.pat.filename,  rails_blob_path(@patch.pat, disposition: "attachment") %>
                   <% end %>
                <% end %>

<div>
  <%= link_to "Edit this patch", edit_patch_path(@patch), class: "btn btn-primary my-2" %> |
  <%= link_to "Back", project_patches_path(@patch.project), class: "btn btn-warning my-2" %>

  <%= button_to "Destroy this patch", @patch, method: :delete, class: "btn btn-danger" %>
</div>

  </div>
</html>   


