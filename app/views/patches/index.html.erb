  </head>
      <body>
          <div class="container">
            <div class="row justify-content-md-center"> 
           
                <div class="projects">

                  <% @patches.each do |patch| %>
                    <%= render patch %> 
                    <p>
                      <%= link_to "Show this patch", patch %>
                    </p>
                  <% end %>
                </div>

                <%= link_to "New", new_project_patch_path(@project), class: "btn btn-primary" %> <br>
                <%= link_to "Back", project_path(@project) %>
            </div> 
      
</div>
